<div class="postlist wa-stack"  class=".wa-gap-xxl">
	{% for post in postslist | reverse %}
	<div class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
		<div class="postlist-item-header">
			{% if post.data.author %}
			  <a href="/authors/{{ post.data.author | slugify }}/">{{ post.data.author }}</a>
			{% endif %}:
			<a href="{{ post.url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
			<span style="white-space: nowrap;">(&nbsp;<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | germanDate }}</time>&nbsp;)</span>
		</div>
		<div class="wa-flank wa-gap-xs wa-align-items-start">
			{% if post.data.cover %}
			<div>
				<a href="{{ post.url }}">
					{% image 'blog/books' + post.data.path + '/' + post.data.cover, post.data.title, "80px" %}
				</a>
			</div>
			{% endif %}
			<div>
				{{ post.templateContent | excerpt | safe }}
			</div>
		</div>
	</div>
	{% endfor %}
</div>
